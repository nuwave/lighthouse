{
    "name": "nuwave/lighthouse",
    "type": "library",
    "keywords": [
        "api",
        "graphql",
        "laravel"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Christopher Moore",
            "email": "chris@nuwavecommerce.com"
        }
    ],
    "support": {
        "issues": "https://github.com/nuwave/lighthouse/issues",
        "source": "https://github.com/nuwave/lighthouse"
    },
    "require": {
        "webonyx/graphql-php": "^0.11.5",
        "illuminate/support": "^5.4",
        "illuminate/routing": "^5.4",
        "illuminate/pagination": "^5.4",
        "illuminate/http": "^5.4",
        "illuminate/contracts": "^5.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.10",
        "illuminate/validation": "^5.4",
        "orchestra/testbench": "^3.6",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Nuwave\\Lighthouse\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Nuwave\\Lighthouse\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test" : "vendor/bin/phpunit --colors=always",
        "test:ci": "composer test -- --verbose --coverage-text --coverage-clover=coverage.xml"
    },
    "config": {
        "sort-packages": true
    }
}
