root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.graphql]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.neon]
indent_size = 2

[{*.yml, *.yaml}]
indent_size = 2

[*.proto]
indent_size = 2
